@model MVC_Invoice_Project.Models.tbl_customers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Invoice/_MyLayout.cshtml";
}

<h2>Customers</h2>

@using (Html.BeginForm())
{ 
    <table>
        <tr>
            <td>Customer Name</td>
            <td>@Html.TextBoxFor(e => e.Customer_Name)</td>
        </tr>

        <tr>
            <td>Mobile Number</td>
            <td>@Html.TextBoxFor(e => e.Mobile_Number)</td>
        </tr>

        <tr>
            <td>City</td>
            <td>@Html.TextBoxFor(e => e.City)</td>
        </tr>

        <tr>
            <td><input type="submit" value="SUBMIT"/></td>
        </tr>
    </table>

    <hr />

    <table class="table-bordered">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Mobile Number</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var row in ViewBag.customer)
            { 
                <tr>
                    <td>@row.Customer_id</td>
                    <td>@row.Customer_Name</td>
                    <td>@row.Mobile_Number</td>
                    <td>@row.City</td>
                </tr>
            }
        </tbody>
    </table>
}

